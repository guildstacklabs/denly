<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shared="clr-namespace:Denly.Components.Shared"
             x:Class="Denly.Components.Shared.HomeHero">
    <!-- Hero module: binding points are WelcomeText, DateRangeText, NextEventSummary, HasUpdates -->
    <Grid Padding="{x:Static shared:DesignTokens+Spacing.Xxl}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" Spacing="6">
            <!-- Typography tokens from DesignTokens -->
            <Label Text="{Binding WelcomeText, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                   FontFamily="{x:Static shared:DesignTokens+Typography.FontHeading}"
                   FontSize="{x:Static shared:DesignTokens+Typography.Size2xl}"
                   FontAttributes="Bold"
                   TextColor="{x:Static shared:DesignTokens+Colors.DenShadow}" />
            <Label Text="{Binding DateRangeText, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                   FontFamily="{x:Static shared:DesignTokens+Typography.FontBody}"
                   FontSize="{x:Static shared:DesignTokens+Typography.SizeSm}"
                   TextColor="{x:Static shared:DesignTokens+Colors.DenShadow}" />
        </StackLayout>

        <StackLayout Grid.Row="1" Margin="0,12,0,0" Spacing="4">
            <Label Text="Next up"
                   FontFamily="{x:Static shared:DesignTokens+Typography.FontBody}"
                   FontSize="{x:Static shared:DesignTokens+Typography.SizeSm}"
                   TextColor="{x:Static shared:DesignTokens+Colors.DenShadow}" />
            <Label Text="{Binding NextEventSummary, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                   FontFamily="{x:Static shared:DesignTokens+Typography.FontHeading}"
                   FontSize="{x:Static shared:DesignTokens+Typography.SizeLg}"
                   FontAttributes="Bold"
                   TextColor="{x:Static shared:DesignTokens+Colors.DenShadow}" />
        </StackLayout>

        <StackLayout Grid.Row="2" Margin="0,10,0,0" Orientation="Horizontal" Spacing="8">
            <!-- Updated indicator uses HasUpdates binding -->
            <Frame IsVisible="{Binding HasUpdates, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                   WidthRequest="8"
                   HeightRequest="8"
                   CornerRadius="4"
                   BackgroundColor="{x:Static shared:DesignTokens+Colors.Coral}"
                   HasShadow="False" />
            <Label Text="Updated"
                   IsVisible="{Binding HasUpdates, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                   FontSize="{x:Static shared:DesignTokens+Typography.SizeSm}"
                   TextColor="{x:Static shared:DesignTokens+Colors.DenShadow}" />
        </StackLayout>
    </Grid>
</ContentView>
