<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shared="clr-namespace:Denly.Components.Shared"
             x:Class="Denly.Components.Shared.DenButton">
    <!-- Button wrapper with token-based styling -->
    <Button Text="{Binding Text, Source={RelativeSource AncestorType={x:Type ContentView}}}"
            Command="{Binding Command, Source={RelativeSource AncestorType={x:Type ContentView}}}"
            BackgroundColor="{Binding BackgroundColor, Source={RelativeSource AncestorType={x:Type ContentView}}}"
            TextColor="{Binding TextColor, Source={RelativeSource AncestorType={x:Type ContentView}}}"
            CornerRadius="{x:Static shared:DesignTokens+Dimensions.RadiusMd}" />
</ContentView>
