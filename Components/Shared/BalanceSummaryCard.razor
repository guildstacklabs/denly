@namespace Denly.Components.Shared

<div class="balance-summary-card">
    <div class="balance-header">
        <span class="balance-title">Shared balance</span>
        <svg class="balance-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="7 7 17 7 17 17"></polyline>
            <line x1="7" y1="17" x2="17" y2="7"></line>
        </svg>
    </div>
    
    <div class="balance-amount @(Balance == 0 ? "balance-amount--settled" : "")">@BalanceText</div>
    
    <div class="balance-footer">
        <div class="details-link">
            <span>Details</span>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
        </div>
    </div>
</div>

@code {
    [Parameter] public decimal Balance { get; set; }

    private string BalanceText => Balance == 0 
        ? "All Settled Up" 
        : Balance.ToString("C");
}
