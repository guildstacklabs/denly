<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shared="clr-namespace:Denly.Components.Shared"
             x:Class="Denly.Components.Shared.DenText">
    <!-- Simple text wrapper with token-based styling -->
    <Label Text="{Binding Text, Source={RelativeSource AncestorType={x:Type ContentView}}}"
           FontFamily="{Binding FontFamily, Source={RelativeSource AncestorType={x:Type ContentView}}}"
           FontSize="{Binding FontSize, Source={RelativeSource AncestorType={x:Type ContentView}}}"
           TextColor="{Binding TextColor, Source={RelativeSource AncestorType={x:Type ContentView}}}" />
</ContentView>
