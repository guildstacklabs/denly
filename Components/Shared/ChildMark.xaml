<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Denly.Components.Shared.ChildMark">
    <HorizontalStackLayout Spacing="4">
        <BoxView WidthRequest="8"
                 HeightRequest="16"
                 Color="{Binding AccentColor, Source={RelativeSource AncestorType={x:Type ContentView}}}" />
        <Label Text="{Binding Text, Source={RelativeSource AncestorType={x:Type ContentView}}}"
               FontSize="12"
               TextColor="Black" />
    </HorizontalStackLayout>
</ContentView>
