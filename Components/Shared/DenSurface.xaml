<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shared="clr-namespace:Denly.Components.Shared"
             x:Class="Denly.Components.Shared.DenSurface">
    <!-- Surface wrapper using DesignTokens for default padding/background -->
    <Frame Padding="{Binding Padding, Source={RelativeSource AncestorType={x:Type ContentView}}}"
           BackgroundColor="{Binding SurfaceColor, Source={RelativeSource AncestorType={x:Type ContentView}}}"
           CornerRadius="{x:Static shared:DesignTokens+Dimensions.RadiusNook}"
           HasShadow="False">
        <ContentPresenter />
    </Frame>
</ContentView>
