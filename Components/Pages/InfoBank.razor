@page "/info"
@using Denly.Models
@using Denly.Services
@using Denly.Components.Shared
@inject IChildService ChildService
@inject IDocumentService DocumentService
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="info-page">
    <header class="info-header">
         <h1>Info</h1>
         <button class="settings-link" @onclick="NavigateToSettings">
             Settings
         </button>
    </header>

    @if (_isLoading)
    {
        <LoadingSpinner Message="Loading info..." Size="LoadingSize.Large" />
    }
    else
    {
        <!-- Top Level Toggle -->
        <div class="view-toggle-container">
            <div class="view-toggle">
                <button class="toggle-option @(_activeView == InfoView.Children ? "active" : "")" 
                        @onclick="() => SetView(InfoView.Children)">
                    Children
                </button>
                <button class="toggle-option @(_activeView == InfoView.Vault ? "active" : "")" 
                        @onclick="() => SetView(InfoView.Vault)">
                    Vault
                </button>
            </div>
        </div>

        @if (_activeView == InfoView.Children)
        {
            @if (_children == null || !_children.Any())
            {
                 <div class="empty-state">
                    <p>No children profiles found.</p>
                </div>
            }
            else
            {
                <!-- Child Selector Tabs -->
                <div class="child-tabs">
                    @foreach (var child in _children)
                    {
                        <button class="child-tab den-chip @(_selectedChild == child ? "den-chip--active" : "")" 
                                @onclick="() => SelectChild(child)">
                            @child.FirstName
                        </button>
                    }
                </div>

                @if (_selectedChild != null)
                {
                     <div class="info-card">
                         <div class="card-section">
                             <h3>Medical</h3>
                             <div class="info-row">
                                 <span class="label">Doctor</span>
                                 <span class="value">@(_selectedChild.DoctorName ?? "Not set")</span>
                             </div>
                              <div class="info-row">
                                 <span class="label">Contact</span>
                                 <span class="value">@(_selectedChild.DoctorContact ?? "--")</span>
                             </div>
                         </div>
                         
                         <div class="card-divider"></div>
                         
                         <div class="card-section">
                             <h3>School & Sizes</h3>
                              <div class="info-row">
                                 <span class="label">School</span>
                                 <span class="value">@(_selectedChild.SchoolName ?? "Not set")</span>
                             </div>
                             <div class="sizes-grid">
                                 <div class="size-item">
                                     <span class="label">Clothes</span>
                                     <span class="value">@(_selectedChild.ClothingSize ?? "--")</span>
                                 </div>
                                 <div class="size-item">
                                     <span class="label">Shoes</span>
                                     <span class="value">@(_selectedChild.ShoeSize ?? "--")</span>
                                 </div>
                             </div>
                         </div>
                     </div>
                     
                     <button class="edit-btn" @onclick="EditChild">
                         Edit Info
                     </button>
                }
            }
        }
        else // Vault View
        {
            <!-- Folder Filters -->
            <div class="folder-filters">
                <button class="filter-bubble den-chip @(_selectedFolder == null ? "den-chip--active" : "")" 
                        @onclick="() => SelectFolder(null)">
                    All
                </button>
                @foreach (DocumentFolder folder in Enum.GetValues(typeof(DocumentFolder)))
                {
                    <button class="filter-bubble den-chip @(_selectedFolder == folder ? "den-chip--active" : "")" 
                            @onclick="() => SelectFolder(folder)">
                        @folder.ToString()
                    </button>
                }
            </div>

            @if (_filteredDocuments.Any())
            {
                <div class="documents-list">
                    @foreach (var doc in _filteredDocuments)
                    {
                        <div class="document-item">
                            <div class="document-icon @GetFolderClass(doc.Folder)">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="@doc.Folder.GetIcon()"></path>
                                </svg>
                            </div>
                            <div class="document-info">
                                <span class="document-title">@doc.Title</span>
                                <span class="document-meta">@doc.CreatedAt.ToString("MMM d") â€¢ @doc.Folder.GetDisplayName()</span>
                            </div>
                            <button class="doc-action-btn">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="1"></circle>
                                    <circle cx="12" cy="5" r="1"></circle>
                                    <circle cx="12" cy="19" r="1"></circle>
                                </svg>
                            </button>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <p>No documents found.</p>
                </div>
            }
            
            <button class="fab-btn" @onclick="ShowUploadDialog">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
            </button>
        }
    }
</div>

@* Document Upload Modal *@
@if (_showUploadDialog)
{
    <div class="modal-overlay" @onclick="CloseUploadDialog">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Upload Document</h3>
                <button class="close-btn" @onclick="CloseUploadDialog" type="button">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>File</label>
                    <button type="button" class="file-picker-btn" @onclick="PickFile">
                        @if (_selectedFile != null)
                        {
                            <span class="file-name">@_selectedFileName</span>
                        }
                        else
                        {
                            <span class="file-placeholder">Tap to select file</span>
                        }
                    </button>
                </div>

                <div class="form-group">
                    <label>Title</label>
                    <input type="text" @bind="_uploadTitle" placeholder="Document title" />
                </div>

                <div class="form-group">
                    <label>Folder</label>
                    <select @bind="_uploadFolder">
                        @foreach (DocumentFolder folder in Enum.GetValues(typeof(DocumentFolder)))
                        {
                            <option value="@folder">@folder.GetDisplayName()</option>
                        }
                    </select>
                </div>

                @if (!string.IsNullOrEmpty(_uploadError))
                {
                    <div class="upload-error">@_uploadError</div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="cancel-btn" @onclick="CloseUploadDialog">Cancel</button>
                <button type="button" class="save-btn" @onclick="PerformUpload" disabled="@(_isUploading || _selectedFile == null)">
                    @if (_isUploading)
                    {
                        <span>Uploading...</span>
                    }
                    else
                    {
                        <span>Upload</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

@code {
    private bool _isLoading = true;
    private InfoView _activeView = InfoView.Children;
    
    // Children Data
    private List<Child> _children = new();
    private Child? _selectedChild;

    // Documents Data
    private List<Document> _allDocuments = new();
    private List<Document> _filteredDocuments = new();
    private DocumentFolder? _selectedFolder;

    // Upload Dialog State
    private bool _showUploadDialog;
    private bool _isUploading;
    private FileResult? _selectedFile;
    private string _selectedFileName = "";
    private string _uploadTitle = "";
    private DocumentFolder _uploadFolder = DocumentFolder.Other;
    private string _uploadError = "";

    protected override async Task OnInitializedAsync()
    {
        if (await AuthService.GetCurrentUserAsync() is not { } user)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        try
        {
            // Load Children
            var childrenTask = ChildService.GetActiveChildrenAsync();
            var docsTask = DocumentService.GetAllDocumentsAsync();

            await Task.WhenAll(childrenTask, docsTask);

            _children = await childrenTask;
            _selectedChild = _children.FirstOrDefault();

            _allDocuments = await docsTask;
            FilterDocuments();
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void SetView(InfoView view)
    {
        _activeView = view;
    }

    private void SelectChild(Child child)
    {
        _selectedChild = child;
    }
    
    private void EditChild()
    {
        // Navigate to Settings where full child editing is available
        Navigation.NavigateTo("/settings");
    }

    private void SelectFolder(DocumentFolder? folder)
    {
        _selectedFolder = folder;
        FilterDocuments();
    }

    private void FilterDocuments()
    {
        if (_selectedFolder == null)
        {
            _filteredDocuments = _allDocuments.OrderByDescending(d => d.CreatedAt).ToList();
        }
        else
        {
            _filteredDocuments = _allDocuments
                .Where(d => d.Folder == _selectedFolder)
                .OrderByDescending(d => d.CreatedAt)
                .ToList();
        }
    }

    private void ShowUploadDialog()
    {
        _showUploadDialog = true;
        _selectedFile = null;
        _selectedFileName = "";
        _uploadTitle = "";
        _uploadFolder = DocumentFolder.Other;
        _uploadError = "";
    }

    private void CloseUploadDialog()
    {
        _showUploadDialog = false;
        _selectedFile = null;
        _selectedFileName = "";
        _uploadTitle = "";
        _uploadError = "";
    }

    private async Task PickFile()
    {
        try
        {
            var result = await FilePicker.Default.PickAsync();
            if (result != null)
            {
                _selectedFile = result;
                _selectedFileName = result.FileName;

                // Auto-fill title from filename if empty
                if (string.IsNullOrWhiteSpace(_uploadTitle))
                {
                    _uploadTitle = Path.GetFileNameWithoutExtension(result.FileName);
                }
            }
        }
        catch
        {
            _uploadError = "Could not select file. Please try again.";
        }
    }

    private async Task PerformUpload()
    {
        if (_selectedFile == null)
        {
            _uploadError = "Please select a file first.";
            return;
        }

        if (string.IsNullOrWhiteSpace(_uploadTitle))
        {
            _uploadError = "Please enter a title for the document.";
            return;
        }

        _isUploading = true;
        _uploadError = "";
        StateHasChanged();

        try
        {
            // Open file stream and upload
            using var stream = await _selectedFile.OpenReadAsync();
            var fileUrl = await DocumentService.UploadDocumentAsync(stream, _selectedFile.FileName);

            // Create and save document metadata
            var currentUser = await AuthService.GetCurrentUserAsync();
            var document = new Document
            {
                Title = _uploadTitle.Trim(),
                Folder = _uploadFolder,
                FileUrl = fileUrl,
                UploadedBy = currentUser?.Id ?? ""
            };

            await DocumentService.SaveDocumentAsync(document);

            // Refresh documents list
            _allDocuments = await DocumentService.GetAllDocumentsAsync();
            FilterDocuments();

            CloseUploadDialog();
        }
        catch (Exception ex)
        {
            _uploadError = "Upload failed. Please try again.";
        }
        finally
        {
            _isUploading = false;
            StateHasChanged();
        }
    }

    private string GetFolderClass(DocumentFolder folder) => folder switch
    {
        DocumentFolder.Medical => "doc-folder-medical",
        DocumentFolder.School => "doc-folder-school",
        DocumentFolder.Legal => "doc-folder-legal",
        DocumentFolder.Identity => "doc-folder-identity",
        DocumentFolder.Other => "doc-folder-other",
        _ => "doc-folder-other"
    };

    private void NavigateToSettings()
    {
        Navigation.NavigateTo("/settings");
    }

    private enum InfoView
    {
        Children,
        Vault
    }
}
