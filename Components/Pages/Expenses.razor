@page "/costs"
@using Denly.Models
@using Denly.Services
@using Denly.Components.Shared
@inject IExpenseService ExpenseService
@inject IDenService DenService
@inject IChildService ChildService
@inject IConnectivity Connectivity
@inject IAuthService Auth

<div class="costs-page">
    <header class="costs-header">
        <button class="back-btn" @onclick="GoBack">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
        </button>
        <h1>Expenses</h1>
        <div class="header-spacer"></div>
    </header>

    @if (_isLoading)
    {
        <LoadingSpinner Message="Loading expenses..." Size="LoadingSize.Large" />
    }
    else
    {
        @if (_childOptions.Count > 0)
        {
            <div class="child-filter-bar">
                <button class="den-chip @(_selectedChildFilter == null ? "den-chip--active" : "")"
                        @onclick="() => FilterByChild(null)">All</button>
                @foreach (var child in _childOptions)
                {
                    <button class="den-chip @(_selectedChildFilter == child.Id ? "den-chip--active" : "")"
                            @onclick="() => FilterByChild(child.Id)">@child.Name</button>
                }
            </div>
        }

        <BalanceSummaryCard Balance="@_totalOwed" />
        
        @if (_totalOwed != 0)
        {
            <div class="settle-up-action">
                <button class="settle-up-btn" @onclick="ShowSettleUp">Record settlement</button>
            </div>
        }

        <div class="recent-expenses-section">
            <h3 class="section-title">Recent items</h3>

            <div class="expenses-list-card">
                @if (FilteredExpenses.Count > 0)
                {
                    @foreach (var expense in FilteredExpenses)
                    {
                        <ExpenseRow Description="@expense.Description"
                                    Amount="@expense.Amount"
                                    PayerName="@expense.PayerName"
                                    PayerInitials="@expense.PayerInitials"
                                    SplitText="@expense.SplitText"
                                    Date="@expense.Date"
                                    OnClick="@(() => OpenEditExpense(expense))" />
                    }
                }
                else
                {
                    <div class="empty-state">No expenses yet</div>
                }
            </div>
        </div>

        @if (_settlements.Count > 0)
        {
            <div class="settlements-section">
                <h3 class="section-title">Recent settlements</h3>
                <div class="settlements-list">
                    @foreach (var settlement in _settlements)
                    {
                        <div class="settlement-card @(settlement.IsConfirmed ? "confirmed" : "")">
                            <div class="settlement-info">
                                <div class="settlement-amount">@settlement.Amount.ToString("C")</div>
                                <div class="settlement-details">
                                    @(settlement.FromUserName ?? "Someone") paid @(settlement.ToUserName ?? "someone")
                                </div>
                                <div class="settlement-date">@settlement.CreatedAt.ToString("MMM d")</div>
                            </div>
                            <div class="settlement-status">
                                @if (settlement.IsConfirmed)
                                {
                                    <span class="status-badge confirmed">Confirmed</span>
                                }
                                else if (settlement.ToUserId == _currentUserId)
                                {
                                    <button class="confirm-btn" @onclick="() => ConfirmSettlement(settlement.Id)">
                                        Confirm receipt
                                    </button>
                                }
                                else
                                {
                                    <span class="status-badge pending">Pending</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <button class="fab-btn" @onclick="ShowAddExpense">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            <span>New item</span>
        </button>
    }
</div>

<AddExpenseDialog IsOpen="_showAddExpense"
                  IsEditing="_isEditing"
                  Model="_addExpenseModel"
                  Caregivers="_caregivers"
                  Children="_childOptions"
                  CurrentUserId="_currentUserId"
                  OnCancel="HideAddExpense"
                  OnSave="HandleAddExpense" 
                  OnDelete="HandleDeleteExpense" />

<SettleUpDialog IsOpen="_showSettleUp"
                Balance="@_totalOwed"
                Model="_settleUpModel"
                Caregivers="_caregivers"
                OnCancel="HideSettleUp"
                OnSave="HandleSettleUp" />

@code {
    private List<SharedCostsExpenseItem> _expenses = new();
    private List<CaregiverOption> _caregivers = new();
    private List<ChildOption> _childOptions = new();
    private List<Settlement> _settlements = new();
    private decimal _totalOwed;
    private bool _isLoading = true;
    private string? _currentUserId;
    private string? _selectedChildFilter;

    // Dialog state
    private bool _showAddExpense;
    private bool _isEditing;
    private bool _showSettleUp;
    private AddExpenseDialog.AddExpenseInput _addExpenseModel = new();
    private SettleUpDialog.SettleUpInput _settleUpModel = new();

    private List<SharedCostsExpenseItem> FilteredExpenses => _selectedChildFilter == null
        ? _expenses
        : _expenses.Where(e => e.ChildIds.Contains(_selectedChildFilter)).ToList();

    private void FilterByChild(string? childId)
    {
        _selectedChildFilter = childId;
    }

    [Inject] NavigationManager Navigation { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var user = await Auth.GetCurrentUserAsync();
            _currentUserId = user?.Id;
            await LoadData();
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/");
    }

    private async Task LoadData()
    {
        if (Connectivity.NetworkAccess != NetworkAccess.Internet) return;

        var expensesTask = ExpenseService.GetExpensesAsync();
        var membersTask = DenService.GetDenMembersAsync();
        var balancesTask = ExpenseService.GetBalancesAsync();
        var childrenTask = ChildService.GetActiveChildrenAsync();
        var settlementsTask = ExpenseService.GetAllSettlementsAsync();

        await Task.WhenAll(expensesTask, membersTask, balancesTask, childrenTask, settlementsTask);

        var expenses = await expensesTask;
        var members = await membersTask;
        var balances = await balancesTask;
        var children = await childrenTask;
        _settlements = (await settlementsTask).OrderByDescending(s => s.CreatedAt).Take(5).ToList();

        // Populate Options
        _caregivers = members.Select(m => new CaregiverOption 
        { 
            Id = m.UserId, 
            Name = m.DisplayName ?? m.Email ?? "Unknown" 
        }).ToList();

        _childOptions = children.Select(c => new ChildOption
        {
            Id = c.Id,
            Name = c.FirstName
        }).ToList();

        if (balances != null && balances.Any())
        {
            var max = balances.Values.Any() ? balances.Values.Max() : 0;
            var min = balances.Values.Any() ? balances.Values.Min() : 0;
            _totalOwed = Math.Max(Math.Abs(max), Math.Abs(min));
        }

        var expenseIds = expenses.Select(e => e.Id).ToList();
        var splits = await ExpenseService.GetExpenseSplitsAsync(expenseIds);
        var splitMap = splits.GroupBy(s => s.ExpenseId).ToDictionary(g => g.Key, g => g.ToList());

        // Load child associations
        var expenseChildren = await ExpenseService.GetExpenseChildrenAsync(expenseIds);
        var childMap = expenseChildren.GroupBy(ec => ec.ExpenseId)
            .ToDictionary(g => g.Key, g => g.Select(ec => ec.ChildId).ToList());

        _expenses = expenses.OrderByDescending(e => e.CreatedAt).Select(expense => {
             var payerName = members.FirstOrDefault(m => m.UserId == expense.PaidBy)?.DisplayName ?? "Someone";
             var initials = GetInitials(payerName);
             
             // Determine split text
             string splitText = "split evenly";
             if (splitMap.TryGetValue(expense.Id, out var expenseSplits) && expenseSplits.Count > 0)
             {
                 // Logic to describe split could be enhanced
                 splitText = $"{expenseSplits.Count} ways"; 
             }

             return new SharedCostsExpenseItem
             {
                 Id = expense.Id,
                 Date = expense.CreatedAt,
                 Description = expense.Description,
                 Amount = expense.Amount,
                 PayerName = payerName,
                 SplitText = splitText,
                 PayerInitials = initials,
                 ChildIds = childMap.TryGetValue(expense.Id, out var cids) ? cids : new()
             };
        }).ToList();
    }

    // Add/Edit Logic
    private void ShowAddExpense()
    {
        _isEditing = false;
        _addExpenseModel = new AddExpenseDialog.AddExpenseInput();
        _showAddExpense = true;
    }

    private async Task OpenEditExpense(SharedCostsExpenseItem item)
    {
        _isLoading = true; // Show loading while fetching details
        StateHasChanged();

        try
        {
            var expense = await ExpenseService.GetExpenseByIdAsync(item.Id);
            if (expense == null)
            {
                return;
            }

            var splits = await ExpenseService.GetExpenseSplitsAsync(new[] { item.Id });
            var expenseChildAssoc = await ExpenseService.GetExpenseChildrenAsync(new[] { item.Id });

            _addExpenseModel = new AddExpenseDialog.AddExpenseInput
            {
                Id = expense.Id,
                Date = expense.CreatedAt.Date,
                Description = expense.Description,
                Amount = expense.Amount,
                PayerId = expense.PaidBy,
                ChildIds = expenseChildAssoc.Select(ec => ec.ChildId).ToList(),
                Splits = splits.Select(s => new AddExpenseDialog.SplitInput
                {
                    CaregiverId = s.UserId,
                    Percent = s.Percent,
                    CaregiverName = _caregivers.FirstOrDefault(c => c.Id == s.UserId)?.Name ?? "Unknown"
                }).ToList()
            };

            _isEditing = true;
            _showAddExpense = true;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void HideAddExpense()
    {
        _showAddExpense = false;
    }

    private async Task HandleAddExpense(AddExpenseDialog.AddExpenseInput input)
    {
        var description = string.IsNullOrWhiteSpace(input.Description) ? "Expense" : input.Description;

        var expense = new Expense
        {
            Id = input.Id ?? Guid.NewGuid().ToString(),
            Description = description,
            Amount = input.Amount,
            PaidBy = input.PayerId,
            CreatedAt = input.Date.Date
        };

        await ExpenseService.SaveExpenseAsync(expense);

        if (input.Splits.Count > 0)
        {
            var splits = input.Splits.Select(s => new ExpenseSplit
            {
                ExpenseId = expense.Id,
                UserId = s.CaregiverId,
                Percent = s.Percent
            }).ToList();
            await ExpenseService.SaveExpenseSplitsAsync(expense.Id, splits);
        }

        await ExpenseService.SaveExpenseChildrenAsync(expense.Id, input.ChildIds);

        HideAddExpense();
        await LoadData();
    }

    private async Task HandleDeleteExpense()
    {
        if (string.IsNullOrEmpty(_addExpenseModel.Id)) return;

        await ExpenseService.DeleteExpenseAsync(_addExpenseModel.Id);
        HideAddExpense();
        await LoadData();
    }

    // Settle Up Logic
    private void ShowSettleUp()
    {
        _settleUpModel = new SettleUpDialog.SettleUpInput
        {
            Amount = _totalOwed
        };
        _showSettleUp = true;
    }

    private void HideSettleUp()
    {
        _showSettleUp = false;
    }

    private async Task HandleSettleUp(SettleUpDialog.SettleUpInput input)
    {
        await ExpenseService.CreateSettlementAsync(input.Amount, input.PayerId, input.ReceiverId);
        HideSettleUp();
        await LoadData();
    }

    private async Task ConfirmSettlement(string settlementId)
    {
        await ExpenseService.ConfirmSettlementAsync(settlementId);
        await LoadData();
    }

    private static string? GetInitials(string? name)
    {
        if (string.IsNullOrWhiteSpace(name)) return null;
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 1) return parts[0].Substring(0, 1).ToUpperInvariant();
        var first = parts[0].Substring(0, 1).ToUpperInvariant();
        var last = parts[^1].Substring(0, 1).ToUpperInvariant();
        return $"{first}{last}";
    }
}
