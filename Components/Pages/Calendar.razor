@page "/calendar"
@using Denly.Models
@using Denly.Services
@using Denly.Components.Shared
@inject IScheduleService ScheduleService
@inject IChildService ChildService
@inject IDenTimeService DenTimeService
@inject IConnectivity Connectivity

<div class="calendar-page">
    <div class="calendar-header-area">
        <button class="nav-btn" @onclick="PreviousMonth" disabled="@(_isLoading || _isMonthLoading)">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
        </button>
        <h2 class="calendar-title">@CurrentDate.ToString("MMMM yyyy")</h2>
        <div class="header-actions">
            <button class="nav-btn" @onclick="ShowSubscribeDialog" title="Subscribe to calendar">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 11a9 9 0 0 1 9 9"></path>
                    <path d="M4 4a16 16 0 0 1 16 16"></path>
                    <circle cx="5" cy="19" r="1"></circle>
                </svg>
            </button>
            <button class="nav-btn" @onclick="NextMonth" disabled="@(_isLoading || _isMonthLoading)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    </div>

    @if (_children.Count > 0)
    {
        <div class="child-filter-bar">
            <button class="den-chip @(_selectedChildFilter == null ? "den-chip--active" : "")"
                    @onclick="() => FilterByChild(null)">All</button>
            @foreach (var child in _children)
            {
                <button class="den-chip @(_selectedChildFilter == child.Id ? "den-chip--active" : "")"
                        @onclick="() => FilterByChild(child.Id)">@child.FirstName</button>
            }
        </div>
    }

    @if (_isLoading)
    {
        <LoadingSpinner Message="Loading calendar..." Size="LoadingSize.Large" />
    }
    else
    {
        <!-- Calendar Grid -->
        <div class="calendar-grid-card @(_isMonthLoading ? "is-loading" : "")">
            @if (_isMonthLoading)
            {
                <div class="calendar-loading-overlay">
                    <LoadingSpinner Message="Updating calendar..." Size="LoadingSize.Small" />
                </div>
            }
            <div class="week-days-header">
                @foreach (var day in DayNames)
                {
                    <span class="week-day">@day.Substring(0, 1)</span>
                }
            </div>
            
            <div class="days-grid">
                @foreach (var day in CalendarDays)
                {
                    <div class="grid-day @(day.IsCurrentMonth ? "" : "other-month") @(day.IsToday ? "today" : "") @(day.Date == SelectedDate ? "selected" : "")"
                         @onclick="() => SelectDay(day.Date)">
                        <span class="day-num">@day.Date.Day</span>
                        @if (day.Events.Any())
                        {
                            <div class="dot-indicator"></div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Agenda Below Cal -->
        <div class="agenda-container">
        <div class="agenda-header">
            <span class="agenda-date">
                @(SelectedDate.HasValue ? SelectedDate.Value.ToString("dddd, MMM d") : "Select a day")
            </span>
        </div>

            <div class="agenda-items">
                @if (DisplayedDayEvents.Any())
                {
                    @foreach (var evt in DisplayedDayEvents)
                    {
                        <div class="sanctuary-event-row" @onclick="() => OpenEditEventModal(evt)">
                            <div class="event-time">@FormatEventTime(evt)</div>
                            <div class="event-details">
                                <span class="event-title">@evt.Title</span>
                                <span class="event-location">@evt.Location</span>
                            </div>
                        </div>
                    }
                    
                    @if (RemainingEventsCount > 0)
                    {
                        <div class="more-items-pill">+@RemainingEventsCount more items</div>
                    }
                }
                else
                {
                    <div class="empty-state">No items</div>
                }
            </div>
        </div>

        <!-- Floating Action Button -->
        <button class="fab-btn" @onclick="OpenAddEventModal">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            <span>New item</span>
        </button>
    }
</div>

<!-- Event Modal -->
@if (_showEventModal)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>@(_editingEvent.Id == null || string.IsNullOrEmpty(_editingEvent.Title) ? "New item" : "Edit item")</h3>
                <button class="close-btn" @onclick="CloseModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" @bind="_editingEvent.Title" placeholder="Event title" />
                </div>

                <div class="form-group">
                    <label>Date</label>
                    <input type="date" @bind="_editingDate" />
                </div>

                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox" @bind="_editingEvent.AllDay" />
                        All day
                    </label>
                </div>

                @if (!_editingEvent.AllDay)
                {
                    <div class="form-group">
                        <label>Time</label>
                        <input type="time" @bind="_editingTime" />
                    </div>
                }

                <div class="form-group">
                    <label>Type</label>
                    <div class="type-selector">
                        @foreach (EventType type in Enum.GetValues(typeof(EventType)))
                        {
                            <button class="type-btn den-chip @(_editingEvent.Type == type ? "den-chip--active" : "")"
                                    @onclick="() => _editingEvent.Type = type">
                                @type.GetDisplayName()
                            </button>
                        }
                    </div>
                </div>

                <div class="form-group">
                    <label>Location</label>
                    <input type="text" @bind="_editingEvent.Location" placeholder="Location (optional)" />
                </div>

                @if (_children.Count > 0)
                {
                    <div class="form-group">
                        <label>Children</label>
                        <div class="child-checkboxes">
                            @foreach (var child in _children)
                            {
                                <label class="checkbox-label">
                                    <input type="checkbox"
                                           checked="@_editingChildIds.Contains(child.Id)"
                                           @onchange="e => ToggleEditingChild(child.Id, (bool)(e.Value ?? false))" />
                                    @child.FirstName
                                </label>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="modal-footer">
                @if (!string.IsNullOrEmpty(_editingEvent.Id) && _isEditing)
                {
                    <button class="delete-btn" @onclick="DeleteEvent">Remove</button>
                }
                <button class="cancel-btn" @onclick="CloseModal">Cancel</button>
                <button class="save-btn" @onclick="SaveEvent">Save item</button>
            </div>
        </div>
    </div>
}

@if (_showSubscribeDialog)
{
    <div class="modal-overlay" @onclick="() => _showSubscribeDialog = false">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Subscribe to Calendar</h3>
                <button class="close-btn" @onclick="() => _showSubscribeDialog = false">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                @if (_subscriptionUrl == null)
                {
                    <p class="subscribe-hint">Loading subscription link...</p>
                }
                else
                {
                    <p class="subscribe-hint">Add this calendar to Google Calendar, Apple Calendar, or any app that supports ICS subscriptions.</p>
                    <div class="subscribe-url-box">
                        <code class="subscribe-url">@_subscriptionUrl</code>
                    </div>
                }
            </div>
            <div class="modal-footer">
                @if (_subscriptionUrl != null)
                {
                    <button class="save-btn" @onclick="CopySubscriptionUrl">Copy URL</button>
                }
                <button class="cancel-btn" @onclick="() => _showSubscribeDialog = false">Close</button>
            </div>
        </div>
    </div>
}

@code {
    private DateTime CurrentDate = DateTime.Today;
    private DateTime? SelectedDate = DateTime.Today;
    private List<CalendarDay> CalendarDays = new();
    private List<Event> MonthEvents = new();
    private List<Event> SelectedDayEvents = new();
    private List<Event> DisplayedDayEvents = new();
    private int RemainingEventsCount;
    private static readonly string[] DayNames = { "Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" };

    private bool _showEventModal;
    private Event _editingEvent = new();
    private DateTime _editingDate = DateTime.Today;
    private DateTime _editingTime = DateTime.Now;
    private bool _isEditing;
    private TimeZoneInfo? _denTimeZone;
    private bool _isLoading = true;
    private bool _isMonthLoading;

    // Child filter
    private List<Child> _children = new();
    private string? _selectedChildFilter;
    private HashSet<string> _editingChildIds = new();

    // Subscribe dialog
    private bool _showSubscribeDialog;
    private string? _subscriptionUrl;

    protected override async Task OnInitializedAsync()
    {
        _children = await ChildService.GetActiveChildrenAsync();
        await LoadMonthData(showFullLoader: true);
    }

    private async Task LoadMonthData(bool showFullLoader = false)
    {
        if (showFullLoader)
        {
            _isLoading = true;
        }
        else
        {
            _isMonthLoading = true;
        }
        try
        {
            _denTimeZone ??= await DenTimeService.GetDenTimeZoneAsync();

            var todayDen = DenTimeService.ConvertToDenTime(DateTime.Now, _denTimeZone).Date;
            if (CurrentDate == DateTime.Today)
            {
                CurrentDate = todayDen;
            }

            if (SelectedDate == DateTime.Today)
            {
                SelectedDate = todayDen;
            }

            // Simple mock or load logic
            var startDate = new DateTime(CurrentDate.Year, CurrentDate.Month, 1);
            var endDate = startDate.AddMonths(1).AddDays(-1);
            
            MonthEvents = await ScheduleService.GetEventsByRangeAsync(startDate, endDate);

            // Populate child associations
            var eventIds = MonthEvents.Select(e => e.Id).ToList();
            if (eventIds.Count > 0)
            {
                var eventChildren = await ScheduleService.GetEventChildrenAsync(eventIds);
                var childMap = eventChildren.GroupBy(ec => ec.EventId)
                    .ToDictionary(g => g.Key, g => g.Select(ec => ec.ChildId).ToList());
                foreach (var evt in MonthEvents)
                {
                    if (childMap.TryGetValue(evt.Id, out var ids))
                        evt.ChildIds = ids;
                }
            }

            BuildCalendarDays();

            if (SelectedDate.HasValue)
            {
                SetSelectedDayEvents(SelectedDate.Value);
            }
        }
        finally
        {
            _isLoading = false;
            _isMonthLoading = false;
        }
    }

    private List<Event> GetFilteredEvents()
    {
        if (_selectedChildFilter == null) return MonthEvents;
        return MonthEvents.Where(e => e.ChildIds.Contains(_selectedChildFilter)).ToList();
    }

    private void BuildCalendarDays()
    {
        CalendarDays.Clear();
        var firstOfMonth = new DateTime(CurrentDate.Year, CurrentDate.Month, 1);
        var startDate = firstOfMonth.AddDays(-(int)firstOfMonth.DayOfWeek);
        var filtered = GetFilteredEvents();

        for (int i = 0; i < 42; i++) // 6 weeks
        {
            var date = startDate.AddDays(i);
            var dayEvents = filtered.Where(e => EventOverlapsDate(e, date)).ToList();
            CalendarDays.Add(new CalendarDay
            {
                Date = date,
                IsCurrentMonth = date.Month == CurrentDate.Month,
                IsToday = date.Date == DenTimeService.ConvertToDenTime(DateTime.Now, _denTimeZone).Date,
                Events = dayEvents
            });
        }
    }

    private async Task SelectDay(DateTime date)
    {
        SelectedDate = date;
        SetSelectedDayEvents(date);
        
        if (date.Month != CurrentDate.Month)
        {
            CurrentDate = new DateTime(date.Year, date.Month, 1);
            await LoadMonthData();
        }
    }

    private async Task PreviousMonth()
    {
        CurrentDate = CurrentDate.AddMonths(-1);
        await LoadMonthData();
    }

    private async Task NextMonth()
    {
        CurrentDate = CurrentDate.AddMonths(1);
        await LoadMonthData();
    }

    private void OpenAddEventModal()
    {
        _isEditing = false;
        _editingEvent = new Event
        {
            Type = EventType.Other,
            AllDay = false
        };
        _editingChildIds = new HashSet<string>();
        _editingDate = SelectedDate ?? DenTimeService.ConvertToDenTime(DateTime.Now, _denTimeZone).Date;
        _editingTime = DenTimeService.ConvertToDenTime(DateTime.Now, _denTimeZone);
        _showEventModal = true;
    }

    private void OpenEditEventModal(Event evt)
    {
        _isEditing = true;
        _editingEvent = new Event
        {
            Id = evt.Id,
            Title = evt.Title,
            DenId = evt.DenId,
            StartsAt = evt.StartsAt,
            EndsAt = evt.EndsAt,
            AllDay = evt.AllDay,
            Type = evt.Type,
            Location = evt.Location,
            Notes = evt.Notes
        };
        _editingChildIds = new HashSet<string>(evt.ChildIds);

        _editingDate = evt.StartsAt.Date;
        _editingTime = evt.StartsAt;

        _showEventModal = true;
    }

    private void CloseModal()
    {
        _showEventModal = false;
    }

    private async Task SaveEvent()
    {
        if (string.IsNullOrWhiteSpace(_editingEvent.Title)) return;

        // Combine Date + Time
        var combinedStart = _editingDate.Date;
        if (!_editingEvent.AllDay)
        {
            combinedStart = combinedStart.Add(_editingTime.TimeOfDay);
        }
        
        _editingEvent.StartsAt = DateTime.SpecifyKind(combinedStart, DateTimeKind.Unspecified);
        if (_editingEvent.EndsAt.HasValue)
        {
            _editingEvent.EndsAt = null;
        }
        
        await ScheduleService.SaveEventAsync(_editingEvent);
        await ScheduleService.SaveEventChildrenAsync(_editingEvent.Id, _editingChildIds.ToList());
        _showEventModal = false;
        await LoadMonthData();
    }

    private async Task DeleteEvent()
    {
        if (string.IsNullOrEmpty(_editingEvent.Id)) return;
        
        await ScheduleService.DeleteEventAsync(_editingEvent.Id);
        _showEventModal = false;
        await LoadMonthData();
    }

    private string FormatEventTime(Event evt)
    {
        if (evt.AllDay) return "All day";
        return evt.StartsAt.ToString("h:mm tt");
    }

    private void SetSelectedDayEvents(DateTime date)
    {
        var filtered = GetFilteredEvents();
        SelectedDayEvents = filtered
            .Where(e => EventOverlapsDate(e, date))
            .OrderBy(e => e.StartsAt)
            .ToList();

        DisplayedDayEvents = SelectedDayEvents.Take(3).ToList();
        RemainingEventsCount = Math.Max(0, SelectedDayEvents.Count - DisplayedDayEvents.Count);
    }

    private bool EventOverlapsDate(Event evt, DateTime date)
    {
        var start = evt.StartsAt.Date;
        var end = evt.EndsAt.HasValue
            ? evt.EndsAt.Value.Date
            : start;
        return start <= date.Date && end >= date.Date;
    }

    private void FilterByChild(string? childId)
    {
        _selectedChildFilter = childId;
        BuildCalendarDays();
        if (SelectedDate.HasValue)
            SetSelectedDayEvents(SelectedDate.Value);
    }

    private void ToggleEditingChild(string childId, bool isChecked)
    {
        if (isChecked)
            _editingChildIds.Add(childId);
        else
            _editingChildIds.Remove(childId);
    }

    private async Task ShowSubscribeDialog()
    {
        _showSubscribeDialog = true;
        _subscriptionUrl = null;
        StateHasChanged();

        try
        {
            _subscriptionUrl = await ScheduleService.GetOrCreateSubscriptionUrlAsync();
        }
        catch
        {
            _subscriptionUrl = "Failed to generate subscription URL.";
        }
    }

    private async Task CopySubscriptionUrl()
    {
        if (_subscriptionUrl != null)
        {
            await Clipboard.Default.SetTextAsync(_subscriptionUrl);
        }
    }

    private class CalendarDay
    {
        public DateTime Date { get; set; }
        public bool IsCurrentMonth { get; set; }
        public bool IsToday { get; set; }
        public List<Event> Events { get; set; } = new();
    }
}
