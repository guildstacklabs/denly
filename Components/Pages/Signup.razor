@page "/signup"
@layout LoginLayout
@using Denly.Services
@inject IAuthService Auth
@inject NavigationManager Navigation

<div class="signup-container">
    <div class="signup-header">
        <div class="app-logo">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
        </div>
        <h1>Create Account</h1>
        <p class="tagline">Join Denly to coordinate with your co-parent</p>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="error-banner">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            <span>@_errorMessage</span>
        </div>
    }

    <Nook CssClass="auth-nook nook--glass">
        <!-- Google Sign-Up (Primary) -->
        <button class="btn-google" @onclick="SignUpWithGoogle" disabled="@_isLoading">
            <svg class="google-icon" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            @(_isLoading && _loadingType == "google" ? "Creating account..." : "Continue with Google")
        </button>

        <div class="divider">
            <span>or sign up with email</span>
        </div>

        <!-- Email/Password Form -->
        <div class="email-form">
            <div class="form-group">
                <label>Email</label>
                <input type="email"
                       @bind="_email"
                       @bind:event="oninput"
                       placeholder="you@example.com"
                       class="den-input"
                       disabled="@_isLoading" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password"
                       @bind="_password"
                       @bind:event="oninput"
                       placeholder="Create a password (min 6 characters)"
                       class="den-input"
                       disabled="@_isLoading" />
            </div>

            <div class="form-group">
                <label>Confirm Password</label>
                <input type="password"
                       @bind="_confirmPassword"
                       @bind:event="oninput"
                       placeholder="Confirm your password"
                       class="den-input"
                       disabled="@_isLoading" />
            </div>

            @if (_password != _confirmPassword && !string.IsNullOrEmpty(_confirmPassword))
            {
                <div class="field-error">Passwords don't match</div>
            }

            <button class="btn-primary"
                    @onclick="SignUpWithEmail"
                    disabled="@(!IsValidForm || _isLoading)">
                @(_isLoading && _loadingType == "email" ? "Creating account..." : "Create Account")
            </button>
        </div>

        <div class="login-link">
            <span>Already have an account?</span>
            <a href="/login">Sign in</a>
        </div>
    </Nook>
</div>

@code {
    private string _email = string.Empty;
    private string _password = string.Empty;
    private string _confirmPassword = string.Empty;
    private string? _errorMessage;
    private bool _isLoading;
    private string _loadingType = string.Empty;

    private bool IsValidForm =>
        !string.IsNullOrWhiteSpace(_email) &&
        _email.Contains("@") &&
        !string.IsNullOrWhiteSpace(_password) &&
        _password.Length >= 6 &&
        _password == _confirmPassword;

    protected override async Task OnInitializedAsync()
    {
        await Auth.InitializeAsync();

        // If already authenticated, redirect
        if (await Auth.IsAuthenticatedAsync())
        {
            await NavigateAfterSignup();
        }
    }

    private async Task SignUpWithGoogle()
    {
        _isLoading = true;
        _loadingType = "google";
        _errorMessage = null;
        StateHasChanged();

        var result = await Auth.SignInWithGoogleAsync();

        if (result.Success)
        {
            await NavigateAfterSignup();
        }
        else
        {
            _errorMessage = result.ErrorMessage;
        }

        _isLoading = false;
        _loadingType = string.Empty;
    }

    private async Task SignUpWithEmail()
    {
        if (!IsValidForm) return;

        _isLoading = true;
        _loadingType = "email";
        _errorMessage = null;
        StateHasChanged();

        var result = await Auth.SignUpWithEmailAsync(_email, _password);

        if (result.Success)
        {
            await NavigateAfterSignup();
        }
        else
        {
            _errorMessage = result.ErrorMessage;
        }

        _isLoading = false;
        _loadingType = string.Empty;
    }

    private async Task NavigateAfterSignup()
    {
        // New users always go to den creation
        var hasDen = await Auth.HasDenAsync();
        Navigation.NavigateTo(hasDen ? "/" : "/create-den", forceLoad: true);
    }
}
