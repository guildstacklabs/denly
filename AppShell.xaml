<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:Denly.Pages"
       x:Class="Denly.AppShell"
       Title="Denly"
       FlyoutBehavior="Flyout">
    <FlyoutItem Title="Home" Route="home">
        <ShellContent Title="Snapshot"
                      ContentTemplate="{DataTemplate pages:HomeSnapshotPage}"
                      Route="home/snapshot" />
    </FlyoutItem>
    <FlyoutItem Title="Calendar" Route="calendar">
        <ShellContent Title="Agenda"
                      ContentTemplate="{DataTemplate pages:CalendarAgendaPage}"
                      Route="calendar/agenda" />
        <ShellContent Title="Week"
                      ContentTemplate="{DataTemplate pages:CalendarWeekPage}"
                      Route="calendar/week" />
        <ShellContent Title="Month"
                      ContentTemplate="{DataTemplate pages:CalendarMonthPage}"
                      Route="calendar/month" />
    </FlyoutItem>
</Shell>
